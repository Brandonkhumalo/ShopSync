<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp"
    app:strokeColor="@color/background"
    android:backgroundTint="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Owed"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:background="@drawable/badge_bg_gray"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ Cleared"
                android:textSize="12sp"
                android:textColor="#10B981"
                android:background="@drawable/badge_bg_gray"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginVertical="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD Amount"
                    android:textSize="10sp"
                    android:textColor="#64748B" />

                <TextView
                    android:id="@+id/tv_amount_usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#F59E0B" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZWG Amount"
                    android:textSize="10sp"
                    android:textColor="#64748B" />

                <TextView
                    android:id="@+id/tv_amount_zwg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZWG 250.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#8B5CF6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="10sp"
                    android:textColor="#64748B" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 15, 2024"
                    android:textSize="12sp"
                    android:textColor="#1E293B" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes go here"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Cleared"
            android:textSize="14sp"
            android:backgroundTint="#10B981"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>