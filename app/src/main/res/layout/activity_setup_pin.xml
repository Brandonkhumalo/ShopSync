<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_shop_logo"
            android:layout_marginBottom="24dp"
            app:tint="#3B82F6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Up Your PIN"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="16sp"
            android:textColor="#64748B"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a 4-digit PIN for quick and secure login"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter PIN"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/et_pin_1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_pin_2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_pin_3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_pin_4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm PIN"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/et_confirm_pin_1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_confirm_pin_2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_confirm_pin_3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_confirm_pin_4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/pin_input_bg"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PINs do not match"
            android:textSize="14sp"
            android:textColor="#EF4444"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_set_pin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Set PIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#3B82F6"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>
